  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Financial-Times/origami/issues"
  },
  "homepage": "https://github.com/Financial-Times/origami#readme",
  "volta": {
    "node": "16.8.0",
    "npm": "7.23.0"
  },
  "engines": {
    "node": "16",
    "npm": "7"
  },
  "workspaces": [
    "apps/storybook",
    "components/*",
    "libraries/*",
    "presets/*",
    "tools/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@mdx-js/react": "^1.6.22",
    "@testing-library/dom": "^8.0.0",
