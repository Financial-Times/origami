    "proclaim": "^3.6.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "remark": "^13.0.0",
    "remark-lint": "^7.0.1",
    "remark-preset-lint-origami-component": "^2.0.0",
    "sinon": "^10.0.0",
    "storybook-addon-designs": "^6.1.0",
    "stylelint": "^13.12.0",
    "stylelint-config-origami-component": "^1.0.4"
