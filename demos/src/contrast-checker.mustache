<div class="container">
	<div class="color-selectors">
		<div class="o-forms o-forms--inline">
			<label aria-describedby="select-box-info" for="select-standard" class="o-forms__label">Text/foreground color</label>
			<select id="text-selector" class="o-forms__select">

				{{#primary.colors}}
					<option value="{{name}}" {{#baseText}}selected {{/baseText}}>{{name}}</option>
				{{/primary.colors}}

				{{#secondary.colors}}
					<option value={{name}}>{{name}}</option>
				{{/secondary.colors}}

				{{#tertiary.colors}}
					<option value={{name}}>{{name}}</option>
				{{/tertiary.colors}}

				{{#b2c.colors}}
					<option value={{name}}>{{name}}</option>
				{{/b2c.colors}}

			</select>
		</div>
		<div class="o-forms o-forms--inline">
			<label aria-describedby="select-box-info" for="select-standard" class="o-forms__label">Background color</label>
			<select id="background-selector" class="o-forms__select">

				{{#primary.colors}}
					<option value={{name}} {{#baseBackground}}selected {{/baseBackground}}>{{name}}</option>
				{{/primary.colors}}

				{{#secondary.colors}}
					<option value={{name}}>{{name}}</option>
				{{/secondary.colors}}

				{{#tertiary.colors}}
					<option value={{name}}>{{name}}</option>
				{{/tertiary.colors}}

				{{#b2c.colors}}
					<option value={{name}}>{{name}}</option>
				{{/b2c.colors}}

			</select>
		</div>
		<div class="contrast-result">
			<div>
				<span class='contrast-ratio'></span>
				<span class="wcag-rating rating-result"></span>
			</div>
			<p class="rating-message rating-result"></p>
		</div>
	</div>

	<div class="contrast-showcase">
		<p>This is an example of text at 14px</p>
