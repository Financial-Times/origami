<span class="o-forms-title__main">Palette</span>
{{#primary}}
	<label title="{{name}}">
		<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}})" value="{{name}}" {{#baseText}}checked{{/baseText}}>
	</label>
{{/primary}}
<br>
{{#secondary}}
	<label title="{{name}}">
		<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
	</label>
{{/secondary}}
<br>
{{#tertiary}}
	<label title="{{name}}">
		<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}})" value="{{name}}">
	</label>
{{/tertiary}}

<span class="o-forms-title__main">Tones</span>
{{#tones}}
	{{#values}}
		<label title="{{name}}-{{.}}">
			<input type=radio name="foreground" style="background-color: var(--o-colors-{{name}}-{{.}})" value="{{name}}-{{.}}">
		</label>
	{{/values}}
	<br>
{{/tones}}
