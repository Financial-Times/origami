	</pre>

	<h4>SCSS/SASS</h4>
	<pre>
		<code class='syntax-scss'>
@mixin colorizeEverything () {
	body {
		@extend %something;
		background: $background-color;
		color: black !important;
		margin: 10px !global;

		&.font {
			@include aFont($font-name: Arial);
			font-size: getFontSize(2);
			font-weight: 600 !default;
		}
	}

}</code>
	</pre>

