{
	"description": "Provides styling for social media sharing links",
	"keywords": [ "share", "link", "social", "facebook", "twitter", "linkedin", "whatsapp", "email" ],
	"origamiType": "module",
	"origamiCategory": "components",
	"origamiVersion": 1,
	"support": "https://github.com/Financial-Times/o-share/issues",
	"supportContact": {
		"email": "origami.support@ft.com",
		"slack": "financialtimes/origami-support"
	},
	"supportStatus": "active",
	"browserFeatures": {
		"required": [
			"document.queryselector",
			"Element.prototype.closest"
		],
		"optional": [
			"getComputedStyle",
			"canvas",
			"CustomEvent"
		]
	},
	"ci": {
		"circle": "https://circleci.com/api/v1/project/Financial-Times/o-share"
	},
	"demosDefaults": {
		"sass": "demos/src/demo.scss",
		"js": "demos/src/demo.js",
		"dependencies": [
			"o-fonts@^4.0.0",
			"o-normalise@^2.0.0"
		],
		"documentClasses": "demo"
	},
	"demos": [
		{
			"title": "Horizontal",
			"name": "horizontal",
			"template": "demos/src/main.mustache",
			"data": "demos/src/data.json",
			"description": "horizontal"
		},
		{
			"title": "Inverse",
			"name": "inverse",
			"template": "demos/src/main.mustache",
			"data": "demos/src/data-inverse.json",
			"documentClasses": "demo demo--inverse",
			"description": "inverse share icons"
		},
		{
			"title": "Vertical",
			"name": "vertical",
			"template": "demos/src/main.mustache",
			"data": "demos/src/data-vertical.json",
			"description": "vertical"
		},
		{
			"title": "Pa11y",
			"name": "pa11y",
			"template": "demos/src/pa11y.mustache",
			"documentClasses": "",
			"data": "demos/src/data.json",
			"hidden": true
		}
	]
}
