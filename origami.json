{
	"description": "Share module",
	"origamiType": "module",
	"origamiCategory": "components",
	"origamiVersion": 1,
	"support": "https://github.com/Financial-Times/o-share/issues",
	"supportStatus": "active",
	"browserFeatures": {
		"required": [
			"document.queryselector",
			"Element.prototype.closest"
		],
		"optional": [
			"getComputedStyle",
			"canvas",
			"CustomEvent"
			]
		},
	"ci": {
		"circle": "https://circleci.com/api/v1/project/Financial-Times/o-share"
	},
	"demosDefaults": {
		"sass": "demos/src/demo.scss",
		"js": "demos/src/demo.js",
		"dependencies": ["o-fonts@^1.5.0"]
	},
	"demos": [
		{
			"name": "horizontal",
			"template": "demos/src/main.mustache",
			"data": "demos/src/data.json",
			"description": "horizontal"
		},
		{
			"name": "inverse",
			"template": "demos/src/inverse.mustache",
			"data": "demos/src/data.json",
			"description": "inverse share icons"
		},
		{
			"name": "vertical",
			"template": "demos/src/main.mustache",
			"data": "demos/src/data-vertical.json",
			"description": "vertical"
		},
		{
			"name": "pa11y",
			"template": "demos/src/pa11y.mustache",
			"data": "demos/src/data.json",
			"hidden": true
		}
	]
}
