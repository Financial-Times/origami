{
	"description": "Responsive, configurable overlays that support modal and non-modal centered overlays and overlays with arrows",
	"origamiType": "module",
	"origamiCategory": "components",
	"origamiVersion": 1,
	"support": "https://github.com/Financial-Times/o-overlay/issues",
	"supportStatus": "active",
	"browserFeatures": {
		"required": [
			"es5object",
			"es5string",
			"classlist",
			"customevent",
			"requestanimationframe"
		]
	},
	"ci": {
		"circle": "https://circleci.com/api/v1/project/Financial-Times/o-overlay"
	},
	"options": {
		"sass": "demos/src/demo.scss",
		"js": "demos/src/demo.js",
		"bodyClasses": "o-hoverable-on",
		"dependencies": ["o-fonts@^1.5.0"]
	},
	"demos": [
		{
			"name": "modal",
			"description": "Modal shaded overlay",
			"template": "/demos/src/modal.mustache"
		},
		{
			"name": "modal-prevent-closure",
			"description": "Modal shaded overlay with standard closure prevented",
			"template": "/demos/src/modal-prevent-closure.mustache"
		},
		{
			"name": "centered-overlay",
			"template": "/demos/src/centered-overlay.mustache",
			"description": "Non-modal non-shaded centered overlay"
		},
		{
			"name": "overlay-with-arrow",
			"template": "/demos/src/overlay-with-arrow.mustache",
			"description": "Non-modal overlay with an arrow that points to a target",
			"sass": "demos/src/overlay-with-arrow.scss"
		},
		{
			"name": "tooltip",
			"template": "/demos/src/tooltip.mustache",
			"description": "Tooltip for annotating bits of UI",
			"sass": "demos/src/overlay-with-arrow.scss"
		}
	]
}
