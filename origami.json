{
	"description": "Labels for content classification or to emphasise a value. Provides customisation options with the FT colour palette.",
	"keywords": [
		"label",
		"tag"
	],
	"origamiType": "module",
	"origamiCategory": "components",
	"origamiVersion": 1,
	"brands" : [
		"master",
		"internal",
		"whitelabel"
	],
	"support": "https://github.com/Financial-Times/o-labels/issues",
	"supportContact": {
		"email": "origami.support@ft.com",
		"slack": "financialtimes/origami-support"
	},
	"supportStatus": "active",
	"browserFeatures": {
		"required": [],
		"optional": []
	},
	"demosDefaults": {
		"sass": "demos/src/demo.scss",
		"dependencies": [
			"o-fonts@^4.0.0",
			"o-normalise@^2.0.0"
		]
	},
	"demos": [
		{
			"name": "sizes",
			"title": "Sizes",
			"description": "Label size modifiers are used to change the prominence of labels.",
			"template": "/demos/src/sizes.mustache"
		},
		{
			"name": "content-states",
			"title": "Content States",
			"description": "States used to differentiate between types of content.",
			"template": "/demos/src/states.mustache",
			"data": "demos/src/data/states-content.json",
			"brands": [
				"master"
			]
		},
		{
			"name": "lifecycle-states",
			"title": "Lifecycle States",
			"description": "States used to represent stages in the product lifecycle.",
			"template": "/demos/src/states.mustache",
			"data": "demos/src/data/states-lifecycle.json",
			"brands": [
				"master"
			]
		},
		{
			"name": "service-tier-states",
			"title": "Service Tier States",
			"description": "States used to represent the different service support tiers.",
			"template": "/demos/src/states.mustache",
			"data": "demos/src/data/states-service-tier.json",
			"brands": [
				"internal"
			]
		},
		{
			"name": "support-status-states",
			"title": "Support Status States",
			"description": "States used to represent the different support levels of Origami components.",
			"template": "/demos/src/states.mustache",
			"data": "demos/src/data/states-support-status.json",
			"brands": [
				"internal"
			]
		},
		{
			"name": "typography",
			"title": "Typography",
			"description": "Labels sitting in line with text that's styled with o-typography.",
			"template": "/demos/src/typography.mustache"
		},
		{
			"name": "indicators",
			"title": "Indicators",
			"description": "",
			"brands": [
				"master"
			],
			"template": "/demos/src/indicators.mustache"
		},
		{
			"name": "indicators-inverse",
			"title": "Inverse Indicators",
			"description": "",
			"data": {"modifiers": ["inverse"]},
			"documentClasses": "demo-inverse",
			"brands": [
				"master"
			],
			"template": "/demos/src/indicators.mustache"
		},
		{
			"name": "timestamp",
			"title": "Timestamp",
			"description": "",
			"brands": [
				"master"
			],
			"template": "/demos/src/timestamp.mustache"
		},
		{
			"name": "timestamp-inverse",
			"title": "Inverse Timestamp",
			"description": "",
			"data": {"modifiers": ["inverse"]},
			"documentClasses": "demo-inverse",
			"brands": [
				"master"
			],
			"template": "/demos/src/timestamp.mustache"
		},
		{
			"title": "Standard Label With Custom Markup",
			"name": "custom",
			"template": "demos/src/custom.mustache",
			"data": {"standard": true},
			"hidden": true
		},
		{
			"title": "Indicator Label With Custom Markup",
			"name": "custom-indicator",
			"template": "demos/src/custom.mustache",
			"data": {"indicator": true},
			"brands": [
				"master"
			],
			"hidden": true
		},
		{
			"title": "Pa11y",
			"name": "pa11y",
			"template": "demos/src/pa11y.mustache",
			"data": "demos/src/data/pa11y.json",
			"hidden": true,
			"description": "Highlight accessibility issues"
		}
	]
}
