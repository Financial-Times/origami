---
import {getCollection} from "astro:content"
import DocLayout from "@/layouts/DocLayout.astro"

export async function getStaticPaths() {
	const entries = await getCollection("documentation", ({id}) =>
		id.startsWith("components/")
	)
	return entries.map(entry => ({
		params: {slug: entry.slug.split("/")[1]},
		props: {entry},
	}))
}
const {entry} = Astro.props
const {Content} = await entry.render()
const {title, description} = entry.data
---

<DocLayout title={title} description={description} secondaryNav={{
	renderSecondaryNav: true,
	lastChildrenDepth: true,
	collectionName: "documentation",
	subDirectory: "components/",
}}>
	<Content />
</DocLayout>
