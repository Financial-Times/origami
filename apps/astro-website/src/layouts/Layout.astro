---
import Header from "@/components/header/Header.astro"
import Footer from "@/components/Footer.astro"

import {styles} from "@/helpers/getStyles"
const layout = styles["@financial-times/o-layout"]
const fonts = styles["@financial-times/o-fonts"]
const normalise = styles["@financial-times/o-normalise"]
---

<Fragment set:html={layout} />
<Fragment set:html={fonts} />
<Fragment set:html={normalise} />

<div class="o-layout o-layout--landing">
	<div class="o-layout__header">
		<Header />
	</div>
	<slot />
	<div class="o-layout__footer">
		<Footer />
	</div>
</div>
