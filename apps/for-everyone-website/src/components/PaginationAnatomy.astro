import { ButtonPagination } from '@financial-times/o3-button';

const selectedPage = 3;

const paginationArgs = {
    nextPager: {
        href: '#next',
        label: 'next results',
    },
    previousPager: {
        href: '#previous',
        label: 'previous results',
    },
    pages: Array(10)
        .fill(null)
        .map((page, index) => ({
            href: '#',
            current: index + 1 === selectedPage,
            number: index + 1,
        }))
}

